{
  "name": "cue-for-chrome",
  "version": "1.0.0",
  "description": "Chrome extension for real-time AI scaffolding with invisible overlay UI",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc --noEmit && vite build && cp manifest.json dist/ && cp -r public/* dist/",
    "preview": "vite preview",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/chrome": "^0.0.246",
    "@types/node": "^24.5.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "manifest": "chrome-extension"
}
