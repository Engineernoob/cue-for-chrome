{
  "manifest_version": 3,
  "name": "Cue for Chrome",
  "version": "1.0.0",
  "description": "Real-time AI scaffolding with invisible overlay for interviews, coding, and meetings",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Toggle the AI overlay"
    }
  },
  "action": {
    "default_title": "Cue for Chrome"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "overlay.js",
        "assets/overlayCSS.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}



